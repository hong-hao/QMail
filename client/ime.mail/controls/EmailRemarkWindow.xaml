<Window x:Class="ime.mail.controls.EmailRemarkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="备注" Height="200" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBox x:Name="txtText" AcceptsReturn="True" AcceptsTab="True" Margin="2" TextWrapping="Wrap" />
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="2" HorizontalAlignment="Right">
            <Button x:Name="btnOK" Content="确 定" Width="70" Height="23" Margin="2"/>
            <Button x:Name="btnCancel" Content="取 消" Width="70" Height="23" Margin="2"/>
        </StackPanel>
    </Grid>
</Window>
